<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <ServerGarbageCollection>true</ServerGarbageCollection>
    <ConcurrentGarbageCollection>true</ConcurrentGarbageCollection>
    <authors>Brad</authors>
    <owners>Brad</owners>
    <PackageLicenseExpression>GPL-3.0-or-later</PackageLicenseExpression>
    <description>An opinionated implementation of a modbus server and client</description>
    <PackageProjectUrl>https://github.com/bradder555/fsModbus</PackageProjectUrl>
  </PropertyGroup>

  <ItemGroup>
    <Compile Include="Util.fs" />
    <Compile Include="ModbusTypes.fs" />
    <Compile Include="Modbus.fs" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Logging" Version="5.0.0" />
    <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="5.0.0" />
    <PackageReference Include="system.io" Version="4.3.0" />
    <PackageReference Include="system.io.ports" Version="4.5.0" />
    <PackageReference Include="system.net.sockets" Version="4.3.0" />
  </ItemGroup>

</Project>
